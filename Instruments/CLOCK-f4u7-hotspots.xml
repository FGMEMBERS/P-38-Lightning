                            <step>900</step>
                            <min>0</min>
                            <max>43200</max>
                            <wrap>true</wrap>
                    </binding>
            </action>

            <action>
                    <name>calibrate fine</name>
                    <button>0</button>
                    <x>-110</x>
                    <y>-550</y>
                    <w>100</w>
                    <h>180</h>
