                            <property>/instrumentation/clock/offset-sec</property>
                            <step>-900</step>
                            <min>0</min>
                            <max>43200</max>
                            <wrap>1</wrap>
                    </binding>
            </action>

            <action>
                    <name>calibrate fine</name>
                    <button>0</button>
                    <x>10</x>
                    <y>-550</y>
                    <w>100</w>
