<PropertyList>

 <name>Panel Hotspots</name>
 <background>Aircraft/P-38-Lightning/Panels/Textures/transparent-bg.rgb</background>
 <w>512</w>
 <h>512</h>
 <y-offset>0</y-offset>


<instruments>
    <instrument>
        <name>Control</name>
        <x>256</x>
        <y>256</y>
        <w>512</w>
        <h>512</h>
        <w-base>1024</w-base>
        <h-base>1024</h-base>

    <actions>
            <action>
                    <name>calibrate fine</name>
                    <button>0</button>
                    <x>-110</x>
                    <y>-550</y>
                    <w>100</w>
                    <h>180</h>
                    <binding>
                            <command>property-adjust</command>
                            <property>/instrumentation/clock/offset-sec</property>
                            <step>-60</step>
                            <min>0</min>
                            <max>43200</max>
                            <wrap>true</wrap>
                    </binding>
            </action>

            <action>
                    <name>calibrate coarse</name>
                    <button>1</button>
                    <x>-110</x>
                    <y>-550</y>
                    <w>100</w>
                    <h>180</h>
