<PropertyList>

 <name>Panel Hotspots</name>
 <background>Aircraft/P-38-Lightning/Panels/Textures/transparent-bg.rgb</background>
 <w>512</w>
 <h>512</h>
 <y-offset>0</y-offset>


<instruments>
    <instrument>
        <name>Control</name>
        <x>256</x>
        <y>256</y>
        <w>512</w>
        <h>512</h>
        <w-base>1024</w-base>
        <h-base>1024</h-base>
        <actions>
<!--*******************************************************************-->
            <action>
                    <name>calibrate fine</name>
                    <button>0</button>
                    <x>-590</x>
                    <y>-500</y>
                    <w>100</w>
                    <h>180</h>
                    <binding>
                            <command>property-adjust</command>
                            <property>/instrumentation/heading-indicator/setting-manual-hdg</property>
                            <step>-1</step>
                            <min>0</min>
                            <max>360</max>
                            <wrap>1</wrap>
                    </binding>
            </action>

            <action>
                    <name>calibrate coarse</name>
                    <button>1</button>
                    <x>-590</x>
                    <y>-500</y>
                    <w>100</w>
                    <h>180</h>
                    <binding>
                            <command>property-adjust</command>
                            <property>/instrumentation/heading-indicator/setting-manual-hdg</property>
                            <step>-5</step>
                            <min>0</min>
                            <max>360</max>
                            <wrap>1</wrap>
                    </binding>
            </action>

            <action>
                    <name>calibrate fine</name>
                    <button>0</button>
                    <x>-470</x>
                    <y>-500</y>
                    <w>100</w>
                    <h>180</h>
                    <binding>
                            <command>property-adjust</command>
                            <property>/instrumentation/heading-indicator/setting-manual-hdg</property>
                            <step>1</step>
                            <min>0</min>
                            <max>360</max>
                            <wrap>1</wrap>
                    </binding>
            </action>

            <action>
                    <name>calibrate coarse</name>
                    <button>1</button>
                    <x>-470</x>
                    <y>-500</y>
                    <w>100</w>
                    <h>180</h>
                    <binding>
                            <command>property-adjust</command>
                            <property>/instrumentation/heading-indicator/setting-manual-hdg</property>
                            <step>5</step>
                            <min>0</min>
                            <max>360</max>
                            <wrap>1</wrap>
                    </binding>
            </action>




