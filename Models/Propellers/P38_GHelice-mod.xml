<PropertyList>


    <model>
        <name>HeliceG</name>
        <path>Aircraft/P-38-Lightning/Models/Propellers/P38_GHelice-Base.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>


    <model>
        <name>CasserolleHG</name>
        <path>Aircraft/P-38-Lightning/Models/Propellers/P38_CasserolleHelice.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>


    <animation>
        <type>select</type>
        <object-name>HeliceG</object-name>
        <object-name>CasserolleHG</object-name>
        <condition>
                <less-than>
                    <property>sim/multiplay/generic/float[3]</property> <!-- engines/engine[0]/thruster/rpm-->
                <value>1300</value>
                </less-than>
        </condition>
    </animation>


    <animation>
        <type>spin</type>
        <object-name>HeliceG</object-name>
        <object-name>CasserolleHG</object-name>
        <property>sim/multiplay/generic/float[3]</property>  <!-- engines/engine[0]/thruster/rpm-->
        <factor>0.105</factor>
        <center>
                <x-m>0</x-m>
                <y-m>-0.0</y-m>
                <z-m>0</z-m>
        </center>
        <axis>
                <x>1.0</x>
                <y>0.0</y>
                <z>0.0</z>
        </axis>
    </animation>

    <model>
        <name>CasserollePropdiskG</name>
        <path>Aircraft/P-38-Lightning/Models/Propellers/P38_CasserollePropdisk.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>

    <model>
        <name>PropDiskG</name>
        <path>Aircraft/P-38-Lightning/Models/Propellers/P38_Propdisk.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>


    <animation>
        <type>select</type>
        <object-name>CasserollePropdiskG</object-name>
        <condition>
                <greater-than>
                    <property>sim/multiplay/generic/float[3]</property>
                <!--<property>engines/engine[0]/thruster/rpm</property>-->
                <value>850</value>
                </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>PropDiskG</object-name>
        <condition>
                <greater-than>
                   <!-- <property>sim/multiplay/generic/float[3]</property>-->
                <property>engines/engine[0]/thruster/rpm</property>
                <value>850</value>
                </greater-than>
        </condition>
    </animation>

    <animation>
        <type>spin</type>
        <object-name>CasserollePropdiskG</object-name>
        <property>sim/multiplay/generic/float[5]</property>
       <!-- <property>fdm/jsbsim/fcs/propeller0-rotation</property>-->
        <factor>1.05</factor>
        <center>
            <x-m>-0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>spin</type>
        <object-name>PropDiskG</object-name>
        <property>sim/multiplay/generic/float[5]</property>
        <!--<property>fdm/jsbsim/fcs/propeller0-rotation</property>-->
        <factor>1.05</factor>
        <center>
            <x-m>-0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>




</PropertyList>