<PropertyList>


    <model>
        <name>HeliceD</name>
        <path>Aircraft/P-38-Lightning/Models/Propellers/P38_DHelice-Base.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>


    <model>
        <name>CasserolleHD</name>
        <path>Aircraft/P-38-Lightning/Models/Propellers/P38_CasserolleHelice.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>


    <animation>
        <type>select</type>
        <object-name>HeliceD</object-name>
        <object-name>CasserolleHD</object-name>
        <condition>
                <less-than>
                    <property>sim/multiplay/generic/float[4]</property> <!--engines/engine[1]/thruster/rpm-->
                <value>1300</value>
                </less-than>
        </condition>
    </animation>


    <animation>
        <type>spin</type>
        <object-name>HeliceD</object-name>
        <object-name>CasserolleHD</object-name>
        <property>sim/multiplay/generic/float[4]</property>  <!--engines/engine[1]/thruster/rpm-->
        <factor>-0.100</factor>
        <center>
                <x-m>0</x-m>
                <y-m>-0.0</y-m>
                <z-m>0</z-m>
        </center>
        <axis>
                <x>1.0</x>
                <y>0.0</y>
                <z>0.0</z>
        </axis>
    </animation>

    <model>
        <name>CasserollePropdiskD</name>
        <path>Aircraft/P-38-Lightning/Models/Propellers/P38_CasserollePropdisk.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>

    <model>
        <name>PropDiskD</name>
        <path>Aircraft/P-38-Lightning/Models/Propellers/P38_Propdisk.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
            <roll-deg>0</roll-deg>
        </offsets>
    </model>

    <animation>
        <type>select</type>
        <object-name>CasserollePropdiskD</object-name>
        <condition>
                <greater-than>
                    <property>sim/multiplay/generic/float[4]</property>
                <!--<property>engines/engine[1]/thruster/rpm</property>-->
                <value>850</value>
                </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>PropDiskD</object-name>
        <condition>
                <greater-than>
                    <!--<property>sim/multiplay/generic/float[4]</property>-->
                <property>engines/engine[1]/thruster/rpm</property>
                <value>850</value>
                </greater-than>
        </condition>
    </animation>

    <animation>
        <type>spin</type>
        <object-name>CasserollePropdiskD</object-name>
        <property>sim/multiplay/generic/float[6]</property>
       <!-- <property>fdm/jsbsim/fcs/propeller1-rotation</property>-->
        <factor>-1</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>

     <animation>
        <type>spin</type>
        <object-name>PropDiskD</object-name>
        <property>sim/multiplay/generic/float[6]</property>
        <!--<property>fdm/jsbsim/fcs/propeller1-rotation</property>-->
        <factor>-1</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>


</PropertyList>