<PropertyList>

    <path>p38-propdisk.ac</path>
    <texture-path>Textures/texture-us</texture-path>


    <animation>
        <type>noshadow</type>
        <object-name>PropDisk</object-name>
        <object-name>PropDiskRev</object-name>
    </animation>



    <animation>
    <type>select</type>
    <object-name>PropDisk</object-name>
    <condition>
    <greater-than>
        <property>/engines/engine[1]/thruster/rpm</property>
        <value>1500</value>
    </greater-than>
    </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>PropDiskRev</object-name>
        <condition>
            <property>/engines/engine[1]/running</property>
            <and>
            <less-than>
                <property>/engines/engine[1]/thruster/rpm</property>
                <value>1500</value>
            </less-than>
            <greater-than>
                <property>/engines/engine[1]/thruster/rpm</property>
                <value>850</value>
            </greater-than>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Casserolle</object-name>
        <condition>
            <greater-than>
                <property>/engines/engine[1]/thruster/rpm</property>
                <value>1290</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>spin</type>
        <object-name>PropDisk</object-name>
        <property>/engines/engine[1]/thruster/rpm</property>
        <factor>-0.009</factor>
        <center>
            <x-m>-0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>spin</type>
        <object-name>PropDiskRev</object-name>
        <property>/engines/engine[1]/thruster/rpm</property>
        <factor>-0.06</factor>
        <center>
            <x-m>-0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>spin</type>
        <object-name>Casserolle</object-name>
        <property>/engines/engine[1]/thruster/rpm</property>
        <factor>-0.50</factor>
        <center>
            <x-m>-0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>


</PropertyList>