<PropertyList>

	<path>P38-Pilote.ac</path>
	<texture-path>Textures/Pilote</texture-path>

        <animation>
		<type>select</type>
		<!--<object-name>Lunette</object-name>-->
		<object-name>Tube</object-name>
		<condition>
			<equals>
				<property>fdm/jsbsim/fcs/canopy-pos-norm</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Masque</object-name>
		<property>fdm/jsbsim/fcs/canopy-pos-norm</property>
		<interpolation>
			<entry>
				<ind>0.0</ind>
				<dep>0.0</dep>
			</entry>
			<entry>
				<ind>0.2</ind>
				<dep>-120</dep>
			</entry>
			<entry>
				<ind>1.0</ind>
				<dep>-120</dep>
			</entry>
		</interpolation>
		<axis>
                    <x1-m>0.259677</x1-m>
                    <y1-m>-0.0845686</y1-m>
                    <z1-m>0.330483</z1-m>
                    <x2-m>0.247337</x2-m>
                    <y2-m>-0.0792888</y2-m>
                    <z2-m>0.300901</z2-m>
                </axis>
	</animation>

</PropertyList>