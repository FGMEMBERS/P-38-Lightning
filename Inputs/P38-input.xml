<PropertyList>

    <keyboard>
            <key n="100">
                    <name>d</name>
                    <desc>Toggle Canopy</desc>
                    <binding>
                            <command>property-toggle</command>
                            <property>/fdm/jsbsim/fcs/canopy-control</property>
                    </binding>
            </key>
            <key n="36">
                    <name>$</name>
                    <desc>Toggle engine cowling flaps</desc>
                    <binding>
                            <command>property-toggle</command>
                            <property>/controls/flight/cowl-flap</property>
                    </binding>
            </key>

            <key n="125">
                <name>}</name>
                <desc>Master Electric  Switch  and Increase Magneto on Selected Engine</desc>

                <binding>
                    <command>nasal</command>
                    <script>controls.stepMagnetos(1)</script>
                </binding>

                <binding>  <!-- will be moved to panel specific button-->
                        <command>property-assign</command>
                        <property>/controls/electric/master-switch</property>
                        <value>1</value>
                </binding>
        </key>

        <key n="123">
                <name>{</name>
                <desc>Master Electric  Switch  and Increase Magneto on Selected Engine</desc>

                <binding>
                    <command>nasal</command>
                    <script>controls.stepMagnetos(-1)</script>
                </binding>

                <binding>  <!-- will be moved to panel specific button-->
                        <command>property-assign</command>
                        <property>/controls/electric/master-switch</property>
                        <value>0</value>
                </binding>
        </key>

